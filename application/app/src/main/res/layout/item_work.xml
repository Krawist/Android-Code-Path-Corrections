<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="@dimen/semi_fab_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_worker_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/worker_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PATHER_ID"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="@dimen/semi_fab_margin"
                    android:paddingEnd="@dimen/semi_fab_margin"
                    android:paddingTop="@dimen/semi_fab_margin"
                    android:paddingBottom="@dimen/semi_fab_margin"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="?android:attr/colorForeground"
                    android:layout_marginTop="@dimen/quatre_fab_margin"
                    android:alpha=".2"
                    app:layout_constraintTop_toTopOf="@id/worker_id"
                    app:layout_constraintBottom_toBottomOf="@id/worker_id"
                    app:layout_constraintStart_toEndOf="@id/worker_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/semi_fab_margin"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_image_preview"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@id/layout_worker_id"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/semi_fab_margin"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/reproduction1"/>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/work_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Interafce une"
                android:layout_marginStart="@dimen/semi_fab_margin"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                app:layout_constraintTop_toTopOf="@id/card_image_preview"
                app:layout_constraintBottom_toBottomOf="@id/card_image_preview"
                app:layout_constraintStart_toEndOf="@id/card_image_preview"/>

            <ImageButton
                android:id="@+id/indicator_evaluate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_check_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/card_image_preview"
                app:layout_constraintBottom_toBottomOf="@id/card_image_preview"
                android:background="@android:color/transparent"
                android:layout_marginEnd="@dimen/fab_margin"
                app:tint="@color/color_accent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>